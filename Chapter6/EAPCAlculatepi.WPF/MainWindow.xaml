<Window x:Class="EAPCAlculatepi.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EAPCAlculatepi.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="calculatepi1000" Content="Calculate pi (1000)" HorizontalAlignment="Left" Margin="78,16,0,0" VerticalAlignment="Top" Height="23" Width="178" Click="Calculatepi1000_Click"/>
        <Button x:Name="calculatepi900" Content="Calculate pi (900)" HorizontalAlignment="Center" Margin="0,16,0,0" VerticalAlignment="Top" Width="178" Height="23" Click="Calculatepi900_Click"/>
        <TextBox x:Name="output" HorizontalAlignment="Center" Height="341" Margin="0,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="756" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <Label x:Name="outputlbl" Content="OUTPUT" HorizontalAlignment="Left" Margin="371,42,0,0" VerticalAlignment="Top" Width="70" FontWeight="Bold"/>
        <Button x:Name="calculatepi1000TAP" Content="Calculate pi (1000) TAP" HorizontalAlignment="Left" Margin="522,16,0,0" VerticalAlignment="Top" Width="178" Click="Calculatepi1000TAP_Click" Height="23"/>

    </Grid>
</Window>
